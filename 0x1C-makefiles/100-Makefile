CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
SRC = main.c school.c
OBJ = $(patsubst %.c,%.o,$(SRC))
NAME = school
CCC = $(CC)

.PHONY: all
all: m.h $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

re: oclean all

.PHONY: clean
clean:
	$(RM) -f *~ $(NAME)


.PHONY: oclean
oclean:
	$(RM) -f $(OBJ)

fclean: clean oclean
